{
  "private": true,
  "name": "@bluebird/website",
  "version": "0.1.0",
  "scripts": {
    "start": "lerna run start --parallel",
    "lint": "run-s -l lint:**",
    "lint:js:web": "eslint web/src",
    "lint:js:studio": "eslint studio/src",
    "lint:css:web": "stylelint web/src/**/*.css",
    "lint:css:studio": "stylelint studio/src/**/*.css",
    "postinstall": "lerna bootstrap",
    "test": "lerna run test --stream",
    "build": "lerna run build --parallel"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.12.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "stylelint": "13.7.2",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-standard": "20.0.0",
    "typescript": "4.0.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "react/prop-types": 2
    },
    "plugins": [
      "jsx-a11y"
    ],
    "settings": {
      "react": {
        "version": "16.8.6"
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "ignoreFiles": [
      "**/*.js"
    ],
    "rules": {
      "value-keyword-case": [
        "lower",
        {
          "ignoreProperties": [
            "composes",
            "/(\\-\\-)*font-family\\-*[a-z]*/"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,css,scss,md,mdx,yml}": "prettier --write"
  }
}
