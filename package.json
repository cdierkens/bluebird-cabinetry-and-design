{
  "private": true,
  "name": "@bluebird/website",
  "version": "0.1.0",
  "workspaces": [
    "studio",
    "web"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "check": "lerna run check --parallel",
    "dev": "yarn start",
    "lint:css:studio": "stylelint studio/src/**/*.css",
    "lint:css:web": "stylelint web/src/**/*.css",
    "lint:js:studio": "eslint studio/src",
    "lint:js:web": "eslint web/src",
    "lint": "run-s -l lint:**",
    "start": "lerna run start --parallel",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "eslint": "8.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "12.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "stylelint": "14.2.0",
    "stylelint-config-css-modules": "2.3.0",
    "stylelint-config-standard": "24.0.0",
    "typescript": "4.5.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:react/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "react/prop-types": 2
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": "off"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jsx-a11y",
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "17.0.2"
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "ignoreFiles": [
      "**/*.js"
    ],
    "rules": {
      "value-keyword-case": [
        "lower",
        {
          "ignoreProperties": [
            "composes",
            "/(\\-\\-)*font-family\\-*[a-z]*/"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "selector-class-pattern": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,css,scss,md,mdx,yml}": "prettier --write"
  }
}
